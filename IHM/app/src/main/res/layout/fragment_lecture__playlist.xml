<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#45b5ec"
android:id="@+id/constraintLayout"
tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/Texte1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vos musiques préférées"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <ListView
        android:id="@+id/ListeMusique"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""

        app:layout_constraintBottom_toTopOf="@id/imageButtonReplay"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/Texte1"
        app:layout_constraintVertical_bias="0.19" />


    <ImageView
        android:id="@+id/imageButtonReplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="replay"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonPrevious"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@id/imageButtonPrevious"
        app:layout_constraintTop_toTopOf="@id/imageButtonPrevious"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <ImageView
        android:id="@+id/imageButtonPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="previous"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageButtonReplay"
        app:layout_constraintRight_toLeftOf="@id/imageButtonPlay"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintVertical_bias="0.90"

        app:srcCompat="@android:drawable/ic_media_previous" />

    <ImageView
        android:id="@+id/imageButtonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="play"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageButtonPrevious"
        app:layout_constraintRight_toLeftOf="@id/imageButtonNext"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.90"

        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/imageButtonPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pause"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageButtonPrevious"
        app:layout_constraintRight_toLeftOf="@id/imageButtonNext"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.90"

        app:srcCompat="@android:drawable/ic_media_pause" />

    <ImageView
        android:id="@+id/imageButtonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stop"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageButtonPlay"
        app:layout_constraintRight_toLeftOf="@id/seekbarVolume"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintVertical_bias="0.90"

        app:srcCompat="@android:drawable/ic_media_next" />

    <TextView
        android:id="@+id/tempsDebut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.15"
 />
    <ProgressBar
        android:id="@+id/ProgressBarTemps"
        android:layout_width="270dp"
        android:layout_height="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
        android:id="@+id/tempsFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.85"
         />

    <SeekBar
        android:id="@+id/seekbarVolume"
        android:layout_width="80dp"
        android:layout_height="20dp"

        android:rotation="270"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintLeft_toRightOf="@id/imageButtonNext"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>